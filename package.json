{
	"name": "liner",
	"displayName": "Liner",
	"description": "Line matching engine for simpler snippets and scriptable line processing.",
	"version": "1.0.0",
	"publisher": "defiant00",
	"license": "MIT",
	"repository": "https://github.com/defiant00/liner",
	"icon": "images/logo.png",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"contributes": {
		"configuration": {
			"title": "Liner",
			"properties": {
				"liner.enabledByDefault": {
					"type": "boolean",
					"default": true,
					"description": "Enable/disable whether Liner is active when first opening a file."
				},
				"liner.libraryLocation": {
					"type": "string",
					"default": "",
					"description": "Pattern library location, or 'none' to only use the built-in libraries."
				},
				"liner.patterns": {
					"type": "string",
					"default": "defiant00/alpha-code",
					"description": "List of pattern libraries to load (comma or semicolon-delimited)."
				}
			}
		},
		"commands": [
			{
				"command": "liner.toggle",
				"title": "Toggle Liner"
			}
		]
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"typescript": "^4.4.4"
	}
}